#!/usr/bin/bash 

#
# Start Code Server.
#
echo "$(date): Started code-server"
echo ""

code-server \
    --auth="password" \
    --bind-addr="0.0.0.0:${port}" \
    --disable-telemetry \
    --extra-extensions-dir="$CODE_SERVER_DATAROOT/extensions" \
    --user-data-dir="$CODE_SERVER_DATAROOT" \
    --log debug \
    "$HOME"
