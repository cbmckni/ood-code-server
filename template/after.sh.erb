
# Wait for the RStudio Server to start
echo "Waiting for Code Server to open port ${port}..."
if wait_until_port_used "${host}:8788" 120; then
  echo "Discovered Code Server listening on port ${port}!"
else
  echo "Timed out waiting for Code Server to open port ${port}! on $(date)"
  clean_up 1
fi
sleep 2
